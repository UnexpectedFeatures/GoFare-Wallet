<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:paddingBottom="32dp"
    tools:context=".PinActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/header_default" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/emailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#494949"
        android:textColor="@color/white"
        android:text="matthewgab24@gmail.com"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/welcomeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Enter your Pin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailButton" />

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTv">

        <TextView
            android:id="@+id/pin1"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:background="@drawable/textbox_stroke"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/pin2"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:background="@drawable/textbox_stroke"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/pin3"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:background="@drawable/textbox_stroke"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/pin4"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:background="@drawable/textbox_stroke"
            android:textColor="@color/black" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:backgroundTint="#0097C0"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#0097C0"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="48dp"
            app:layout_constraintEnd_toStartOf="@+id/btn3"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#0097C0"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#0097C0"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#0097C0"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="48dp"
            app:layout_constraintEnd_toStartOf="@+id/btn3"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintTop_toBottomOf="@+id/btn2" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#0097C0"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#0097C0"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#0097C0"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="48dp"
            app:layout_constraintEnd_toStartOf="@+id/btn3"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintTop_toBottomOf="@+id/btn5" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#0097C0"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn6" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#0097C0"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn8" />


        <ImageButton
            android:id="@+id/btnDel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/mpin_radius"
            android:backgroundTint="#0097C0"
            android:contentDescription="Delete"
            android:paddingRight="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/id_backspace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.536"
            app:layout_constraintStart_toEndOf="@+id/btn0"
            app:layout_constraintTop_toBottomOf="@+id/btn8" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/forgotPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="end|center_vertical"
        android:paddingHorizontal="32dp"
        android:text="Forgot MPin?"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />
</androidx.constraintlayout.widget.ConstraintLayout>