<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/custom_radius_a"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="20dp"
    android:layout_marginHorizontal="24dp"
    tools:context=".RegisterFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/toLogin"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:layout_marginVertical="4dp"
                android:backgroundTint="#9BCBE3"
                android:padding="0dp"
                android:text="X"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="24dp" />

            <TextView
                android:id="@+id/signUpTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:text="Welcome To GoFare"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/firstNameLabel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="First Name:"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textbox_stroke"
            android:ems="10"
            android:hint="Jose"
            android:inputType="text"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lastNameLabel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Last Name:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textbox_stroke"
            android:ems="10"
            android:hint="Rizal"
            android:inputType="text"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/middleNameLabel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Middle Name:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/middleNameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textbox_stroke"
            android:ems="10"
            android:hint="Largo"
            android:inputType="text"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/addressLabel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Address:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textbox_stroke"
            android:ems="10"
            android:hint="example St. test Rd."
            android:inputType="text"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/birthdayLabel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Birthday:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/birthdayEditText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/textbox_stroke"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="8dp"
            android:hint="Select your birthday"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none" />

        <TextView
            android:id="@+id/genderLabel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Gender:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <RadioGroup
            android:id="@+id/genderRadioGrp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/maleRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/black"
                android:text="Male"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/femaleRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/black"
                android:text="Female"
                android:textColor="@color/black" />

        </RadioGroup>


        <TextView
            android:id="@+id/contactLabel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Contact Number:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/contactEditText"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textbox_stroke"
            android:ems="10"
            android:hint="+6391234567890"
            android:inputType="text"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Email:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textbox_stroke"
            android:ems="10"
            android:hint="user@gmail.com"
            android:inputType="text"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Password:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textbox_stroke"
            android:ems="10"
            android:hint="userpassword"
            android:inputType="textPassword"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/confirmPasswordLabel"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Confirm Password:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/textbox_stroke"
            android:ems="10"
            android:hint="userpassword"
            android:inputType="textPassword"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signUpBtn"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:backgroundTint="#1E1E1E"
                android:padding="0dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="16dp" />

        </LinearLayout>


</LinearLayout>