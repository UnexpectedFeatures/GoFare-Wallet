<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1"
    android:padding="8dp"
    tools:context=".HomeActivity"
    >


    <com.google.android.material.button.MaterialButton
        android:id="@+id/HomeButton"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/home_icon"
        android:elevation="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:cornerRadius="36dp"
        app:layout_constraintEnd_toStartOf="@+id/SettingsButton"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SettingsButton"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/wrench_icon"
        android:gravity="center"
        android:insetBottom="0dp"
        android:orientation="vertical"
        android:text="Settings"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:cornerRadius="36dp"
        app:layout_constraintEnd_toStartOf="@+id/TransactionsButton"
        app:layout_constraintStart_toEndOf="@+id/HomeButton"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/TransactionsButton"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/transaction_icon"
        android:gravity="center"
        android:orientation="vertical"
        android:text="History"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:cornerRadius="36dp"
        app:layout_constraintEnd_toStartOf="@+id/ProfileButton"
        app:layout_constraintStart_toEndOf="@+id/SettingsButton"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ProfileButton"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/user_icon"
        android:gravity="center"
        android:orientation="vertical"
        android:text="User"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:cornerRadius="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TransactionsButton"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>